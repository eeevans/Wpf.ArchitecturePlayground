<Application x:Class="Wpf.CaliburnMicro.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:b="clr-namespace:Wpf.CaliburnMicro.Bootstrap"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- Theme -->
                <ResourceDictionary Source="/Themes/Dark.xaml" />
                <ResourceDictionary Source="/Themes/Styles/LoginControlStyles.xaml" />
                <ResourceDictionary Source="/Resources/Images/ImageResources.xaml" />

                
                <ResourceDictionary>
                    <!-- Using Lamar IOC Contianer for DI -->
                    <b:LamarBootstrapper x:Key="LamarBootstrapper" />
                    
                    <!-- Using SimpleContainer from Caliburn.Micro for DI -->
                    <!--<b:SimpleContainerBootstrapper x:Key="SimpleContainerBootstrapper" />-->
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
 </Application>
